# Makefile for gopy pkg generation of python bindings to gi
# File is generated by gopy (will not be overwritten though)
# gopy exe -vm=python3 -exclude=driver,oswin -main="runtime.LockOSThread(); gimain.Main(func() {  GoPyMainRun() })" github.com/goki/ki/ki github.com/goki/mat32 github.com/goki/gi/units github.com/goki/gi/oswin github.com/goki/gi/histyle github.com/goki/gi/gi github.com/goki/gi/svg github.com/goki/gi/giv github.com/goki/gi/gi3d github.com/goki/gi/gimain

PYTHON=python3
PIP=$(PYTHON) -m pip

all: gen

install: install-pkg install-exe

# note: it is important that gi3d come after giv, otherwise gi3dcaptures all the common types
# unfortunately this means that all sub-packages need to be explicitly listed.
gen:
	gopy exe -name=gi -vm=python3 -no-warn -exclude=driver,oswin -main="runtime.LockOSThread(); gimain.Main(func() {  GoPyMainRun() })" github.com/goki/ki/ki github.com/goki/mat32 github.com/goki/gi/units  github.com/goki/gi/gi github.com/goki/gi/svg github.com/goki/gi/giv github.com/goki/gi/gi3d github.com/goki/gi/gimain

build:
	$(MAKE) -C gi build

install-pkg:
	# this does a local install of the package, building the sdist and then directly installing it
	rm -rf dist build */*.egg-info *.egg-info
	$(PYTHON) setup.py sdist
	$(PIP) install dist/*.tar.gz

install-exe:
	# install executable into /usr/local/bin
	cp gi/pygi /usr/local/bin/

clean:
	rm -rf gi dist build */*.egg-info *.egg-info
